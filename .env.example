# Minecraft Server Configuration
# Copy this file to .env and customize your settings.

LEVEL_NAME=my-minecraft-server # Change this, no spaces!
MOTD="Welcome to my Minecraft server!" # Change this

# Memory allocation (adjust based on your system)
MEMORY_MIN=512M
MEMORY_MAX=2G

# Network settings
SERVER_PORT=25565
SERVER_IP=
RCON_PORT=25575
RCON_PASSWORD=minecraft
ENABLE_RCON=true
QUERY_PORT=25565
ENABLE_QUERY=false

# World settings
LEVEL_SEED=
LEVEL_TYPE=minecraft:normal
GENERATOR_SETTINGS={}
GENERATE_STRUCTURES=true
MAX_WORLD_SIZE=29999984

# Game settings
GAMEMODE=survival
DIFFICULTY=easy
HARDCORE=false
PVP=false
FORCE_GAMEMODE=false
MAX_PLAYERS=20
SPAWN_MONSTERS=true
SPAWN_ANIMALS=true
SPAWN_NPCS=true
ALLOW_NETHER=true
ALLOW_FLIGHT=false

# Player management
WHITE_LIST=false
ENFORCE_WHITELIST=false
ONLINE_MODE=true
PREVENT_PROXY_CONNECTIONS=false
PLAYER_IDLE_TIMEOUT=0

# Performance settings
VIEW_DISTANCE=10
SIMULATION_DISTANCE=10
MAX_TICK_TIME=60000
NETWORK_COMPRESSION_THRESHOLD=256
MAX_CHAINED_NEIGHBOR_UPDATES=1000000
SYNC_CHUNK_WRITES=true
USE_NATIVE_TRANSPORT=true

# Server behavior
ENABLE_STATUS=true
ENABLE_COMMAND_BLOCK=false
ENABLE_JMX_MONITORING=false
BROADCAST_CONSOLE_TO_OPS=true
BROADCAST_RCON_TO_OPS=true
OP_PERMISSION_LEVEL=4
FUNCTION_PERMISSION_LEVEL=2

# World protection
SPAWN_PROTECTION=16
RATE_LIMIT=0

# Resource packs
RESOURCE_PACK=
RESOURCE_PACK_SHA1=
RESOURCE_PACK_PROMPT=
REQUIRE_RESOURCE_PACK=false

# Advanced settings
LOG_IPS=true
HIDE_ONLINE_PLAYERS=false
BUG_REPORT_LINK=
TEXT_FILTERING_CONFIG=
